<Window x:Name="DraftSimWindow" x:Class="NBADraftLotterySim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NBADraftLotterySim"
        mc:Ignorable="d"
        Title="NBA Draft Lottery Simulator" Height="600" Width="800">
    <Grid>
        <Button x:Name="lottoGenBtn" Content="Generate Lottery" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Center" Click="lottoGenBtn_Click"/>
        <Label x:Name="mainLabel" Content="Label" Margin="0,0,0,50" VerticalAlignment="Center" HorizontalAlignment="Center" Width="36"/>

    </Grid>
</Window>
